<%- include('../partials/header') %>

<div class="container">
    <h2>Recipe List</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Total Cook Time</th>
            </tr>
        </thead>
        <tbody>
            <% recipes.forEach(function(r) { %>
           
                    <tr>
                        <td><a href="/recipes/<%= r._id %>"><%= r.name %></a></td>
                        <td><%= r.description %></td>
                        <% let totalCookTime = r.prepTime + r.cookTime %>
                        <td><%= totalCookTime %> mins</td>
   
                    </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>
